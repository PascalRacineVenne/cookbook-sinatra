<div class="new__recipe">
    <div class="form">
      <div class="title">Welcome</div>
      <div class="subtitle">Let's create a new recipe!</div>
      <form action="/recipes" method="post">
        <div class="input-container ic1">
          <input name="name" class="input" type="text" placeholder=" " />
          <div class="cut"></div>
          <label for="name" class="placeholder">Name</label>
        </div>
        <div class="input-container ic2">
          <input name="description" class="input" type="text" placeholder=" " />
          <div class="cut"></div>
          <label for="description" class="placeholder">Description</label>
        </div>
        <div class="input-container ic2">
          <input name="prep_time" class="input" type="text" placeholder=" " />
          <div class="cut cut-short"></div>
          <label for="prep_time" class="placeholder">Time</>
        </div>
        <div class="input-container ic2">
          <input name="rating" class="input" type="text" placeholder=" " />
          <div class="cut cut-short"></div>
          <label for="rating" class="placeholder">Rating</>
        </div>
        <button type="submit" class="submit">submit</button>
      </form>
    </div>
</div>